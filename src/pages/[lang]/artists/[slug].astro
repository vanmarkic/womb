---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Header from '../../../components/Header.astro';
import { translations, type Language } from '../../../i18n';

export async function getStaticPaths() {
  const artists = await getCollection('artists');
  const languages: Language[] = ['en', 'fr'];
  const events = await getCollection('events');
  const recordings = await getCollection('recordings');

  return languages.flatMap((lang) =>
    artists.map((artist) => ({
      params: { lang, slug: artist.id.replace('.md', '') },
      props: { artist, lang, events, recordings },
    }))
  );
}

const { artist, lang, events, recordings } = Astro.props;

// Get related events
const artistEvents = events.filter((event: CollectionEntry<'events'>) =>
  event.data.artists.includes(artist.id.replace('.md', ''))
);

// Get related recordings
const artistRecordings = recordings.filter((recording: CollectionEntry<'recordings'>) =>
  recording.data.artist.toLowerCase() === artist.data.name.toLowerCase()
);

// Sort events by number (newest first)
artistEvents.sort((a: CollectionEntry<'events'>, b: CollectionEntry<'events'>) =>
  b.data.number - a.data.number
);

// Sort recordings by date (newest first)
if (artistRecordings.length > 0) {
  artistRecordings.sort((a: CollectionEntry<'recordings'>, b: CollectionEntry<'recordings'>) =>
    new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
  );
}

// Format duration helper function
const formatDuration = (seconds: number) => {
  const mins = Math.floor(seconds / 60);
  const secs = seconds % 60;
  return `${mins}:${secs.toString().padStart(2, '0')}`;
};
---

<BaseLayout title={artist.data.name} lang={lang}>
  <Header lang={lang} />
  <article class="artist-detail">
    <header class="artist-header">
      {artist.data.photo && (
        <div class="artist-photo">
          <img src={artist.data.photo} alt={artist.data.name} />
        </div>
      )}
      <div class="artist-info">
        <h1>{artist.data.name}</h1>
        <span class="artist-type">
          {artist.data.type === 'resident'
            ? translations[lang].artists.resident
            : translations[lang].artists.guest}
        </span>
        <nav class="artist-social">
          {artist.data.links?.instagram && (
            <a href={artist.data.links.instagram} target="_blank" rel="noopener">
              Instagram
            </a>
          )}
          {artist.data.links?.soundcloud && (
            <a href={artist.data.links.soundcloud} target="_blank" rel="noopener">
              SoundCloud
            </a>
          )}
          {artist.data.links?.website && (
            <a href={artist.data.links.website} target="_blank" rel="noopener">
              Website
            </a>
          )}
        </nav>
      </div>
    </header>

    {artist.data.bio && (
      <section class="artist-bio">
        <h2>{translations[lang].artists.bio || 'Biography'}</h2>
        <div class="prose">
          <p>{artist.data.bio[lang]}</p>
        </div>
      </section>
    )}

    {artistEvents.length > 0 && (
      <section class="artist-events">
        <h2>{translations[lang].events.title}</h2>
        <div class="events-list">
          {artistEvents.map((event: CollectionEntry<'events'>) => (
            <a
              href={`/womb/${lang}/events/${event.id.replace('.md', '')}`}
              class="event-card"
            >
              {event.data.coverImage && (
                <img src={event.data.coverImage} alt={event.data.title[lang]} />
              )}
              <div class="event-card-content">
                <h3>{event.data.title[lang]}</h3>
                <time>{new Date(event.data.dateFrom).toLocaleDateString()}</time>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}

    {artistRecordings.length > 0 && (
      <section class="artist-recordings">
        <h2>{translations[lang].recordings.title}</h2>
        <div class="recordings-list">
          {artistRecordings.map((recording: CollectionEntry<'recordings'>) => (
            <a
              href={`/womb/${lang}/recordings/${recording.id.replace('.md', '')}`}
              class="recording-card"
            >
              <div class="recording-card-content">
                <h3>{recording.data.title}</h3>
                <div class="recording-meta">
                  <time>{new Date(recording.data.date).toLocaleDateString()}</time>
                  <span class="duration">{formatDuration(recording.data.duration)}</span>
                </div>
              </div>
              <div class="play-icon">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}
  </article>
</BaseLayout>

<style>
  .artist-detail {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  .artist-header {
    display: flex;
    gap: 2rem;
    margin-bottom: 4rem;
    flex-wrap: wrap;
  }

  .artist-photo {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    overflow: hidden;
  }

  .artist-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .artist-info {
    flex: 1;
    min-width: 250px;
  }

  .artist-info h1 {
    font-size: 2.5rem;
    font-weight: 200;
    letter-spacing: 0.05em;
    margin: 0 0 0.5rem 0;
  }

  .artist-type {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 2px;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .artist-social {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .artist-social a {
    color: #808080;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .artist-social a:hover {
    color: #d0d0d0;
  }

  .artist-bio {
    margin-bottom: 5rem;
  }

  .artist-bio h2 {
    font-size: 1.5rem;
    font-weight: 300;
    margin-bottom: 1.5rem;
  }

  .prose {
    line-height: 1.7;
    color: #d0d0d0;
  }

  .artist-events {
    margin-bottom: 5rem;
  }

  .artist-events h2,
  .artist-recordings h2 {
    font-size: 1.5rem;
    font-weight: 300;
    margin-bottom: 2rem;
  }

  .events-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2rem;
  }

  .event-card {
    display: block;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
    overflow: hidden;
    text-decoration: none;
    transition: transform 0.2s ease, background 0.2s ease;
  }

  .event-card:hover {
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.08);
  }

  .event-card img {
    width: 100%;
    aspect-ratio: 16/9;
    object-fit: cover;
  }

  .event-card-content {
    padding: 1rem;
  }

  .event-card h3 {
    font-size: 1.125rem;
    font-weight: 300;
    margin: 0 0 0.5rem 0;
    color: #fff;
  }

  .event-card time {
    color: #808080;
    font-size: 0.875rem;
  }

  .recordings-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .recording-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.2s ease, transform 0.2s ease;
  }

  .recording-card:hover {
    background: rgba(255, 255, 255, 0.08);
    transform: translateX(4px);
  }

  .recording-card-content {
    flex: 1;
  }

  .recording-card h3 {
    font-size: 1.125rem;
    font-weight: 300;
    margin: 0 0 0.5rem 0;
    color: #fff;
  }

  .recording-meta {
    display: flex;
    gap: 1rem;
    color: #808080;
    font-size: 0.875rem;
  }

  .duration {
    color: #606060;
  }

  .play-icon {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s ease;
  }

  .recording-card:hover .play-icon {
    background: rgba(255, 255, 255, 0.15);
  }

  .play-icon svg {
    width: 18px;
    height: 18px;
    margin-left: 2px;
    color: #d0d0d0;
  }

  @media (max-width: 768px) {
    .artist-header {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
  }
</style>