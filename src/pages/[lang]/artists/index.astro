---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Header from '../../../components/Header.astro';
import { translations, type Language } from '../../../i18n';

export async function getStaticPaths() {
  const languages: Language[] = ['en', 'fr'];
  const artists = await getCollection('artists');
  const events = await getCollection('events');

  return languages.map((lang) => ({
    params: { lang },
    props: {
      lang,
      artists,
      events
    },
  }));
}

const { lang, artists, events } = Astro.props;

// Create a map of artist IDs to their events
const artistEvents = new Map<string, CollectionEntry<'events'>[]>();
events.forEach((event: CollectionEntry<'events'>) => {
  event.data.artists.forEach((artistId: string) => {
    if (!artistEvents.has(artistId)) {
      artistEvents.set(artistId, []);
    }
    artistEvents.get(artistId)!.push(event);
  });
});

// Sort artists: residents first (by order), then guests (alphabetically)
artists.sort((a, b) => {
  if (a.data.type === 'resident' && b.data.type === 'guest') return -1;
  if (a.data.type === 'guest' && b.data.type === 'resident') return 1;
  if (a.data.type === 'resident') {
    return a.data.order - b.data.order;
  }
  return a.data.name.localeCompare(b.data.name);
});

const residents = artists.filter(a => a.data.type === 'resident');
const guests = artists.filter(a => a.data.type === 'guest');
---

<BaseLayout title={translations[lang].artists.allArtists} lang={lang}>
  <Header lang={lang} />

  <div class="artists-page">
    <header class="page-header">
      <h1>{translations[lang].artists.allArtists}</h1>
    </header>

    {residents.length > 0 && (
      <section class="artists-section">
        <h2>{translations[lang].artists.residents}</h2>
        <div class="artists-grid">
          {residents.map((artist) => {
            const artistEventList = artistEvents.get(artist.id.replace('.md', '')) || [];
            return (
              <div class="artist-card">
                <a
                  href={`/womb/${lang}/artists/${artist.id.replace('.md', '')}`}
                  class="artist-link"
                >
                  <div class="artist-image">
                    {artist.data.photo ? (
                      <img src={artist.data.photo} alt={artist.data.name} />
                    ) : (
                      <div class="artist-placeholder">
                        <span>{artist.data.name.charAt(0)}</span>
                      </div>
                    )}
                  </div>
                  <h3>{artist.data.name}</h3>
                </a>

                {artistEventList.length > 0 && (
                  <div class="artist-events">
                    <p class="events-label">{translations[lang].events.title}:</p>
                    <ul>
                      {artistEventList.sort((a: CollectionEntry<'events'>, b: CollectionEntry<'events'>) => b.data.number - a.data.number).map((event: CollectionEntry<'events'>) => (
                        <li>
                          <a href={`/womb/${lang}/events/${event.id.replace('.md', '')}`}>
                            {event.data.title[lang]}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
            );
          })}
        </div>
      </section>
    )}

    {guests.length > 0 && (
      <section class="artists-section">
        <h2>{translations[lang].artists.guests}</h2>
        <div class="artists-grid">
          {guests.map((artist) => {
            const artistEventList = artistEvents.get(artist.id.replace('.md', '')) || [];
            return (
              <div class="artist-card">
                <a
                  href={`/womb/${lang}/artists/${artist.id.replace('.md', '')}`}
                  class="artist-link"
                >
                  <div class="artist-image">
                    {artist.data.photo ? (
                      <img src={artist.data.photo} alt={artist.data.name} />
                    ) : (
                      <div class="artist-placeholder">
                        <span>{artist.data.name.charAt(0)}</span>
                      </div>
                    )}
                  </div>
                  <h3>{artist.data.name}</h3>
                </a>

                {artistEventList.length > 0 && (
                  <div class="artist-events">
                    <p class="events-label">{translations[lang].events.title}:</p>
                    <ul>
                      {artistEventList.sort((a: CollectionEntry<'events'>, b: CollectionEntry<'events'>) => b.data.number - a.data.number).map((event: CollectionEntry<'events'>) => (
                        <li>
                          <a href={`/womb/${lang}/events/${event.id.replace('.md', '')}`}>
                            {event.data.title[lang]}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
            );
          })}
        </div>
      </section>
    )}
  </div>
</BaseLayout>

<style>
  .artists-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 3rem;
    font-weight: 200;
    letter-spacing: 0.1em;
  }

  .artists-section {
    margin-bottom: 4rem;
  }

  .artists-section h2 {
    font-size: 1.75rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    margin-bottom: 2rem;
    text-align: center;
    color: #808080;
  }

  .artists-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 2rem;
  }

  .artist-card {
    display: block;
    text-align: center;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 8px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .artist-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.04);
  }

  .artist-link {
    display: block;
    text-decoration: none;
    color: inherit;
    margin-bottom: 1rem;
  }

  .artist-image {
    width: 100%;
    aspect-ratio: 1;
    margin-bottom: 1rem;
    border-radius: 50%;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
  }

  .artist-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: filter 0.2s ease;
  }

  .artist-card:hover .artist-image img {
    filter: brightness(1.1);
  }

  .artist-events {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .events-label {
    font-size: 0.9rem;
    opacity: 0.6;
    margin-bottom: 0.5rem;
    letter-spacing: 0.05em;
    text-transform: lowercase;
  }

  .artist-events ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .artist-events li {
    margin-bottom: 0.3rem;
  }

  .artist-events a {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.2s;
    display: inline-block;
    padding: 0.2rem 0;
  }

  .artist-events a:hover {
    color: rgba(255, 255, 255, 1);
    text-decoration: underline;
  }

  .artist-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #1a1a1a, #2a2a2a);
  }

  .artist-placeholder span {
    font-size: 3rem;
    font-weight: 200;
    color: #808080;
  }

  .artist-card h3 {
    font-size: 1.125rem;
    font-weight: 300;
    color: #d0d0d0;
    letter-spacing: 0.02em;
  }

  @media (max-width: 768px) {
    .artists-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 1.5rem;
    }
  }
</style>