---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout lang="en" title="ambient events & curation">
	<div class="landing">
	<!-- Content overlay -->
	<div class="content">
		<a href="/womb/en/events" class="womb-link">
			<h1>womb</h1>
		</a>
		<p class="tagline">ambient events & artist curation</p>
	</div>

		<!-- Language selector overlay -->
		<div class="lang-enter">
			<a href="/womb/en/events" class="lang-option">EN</a>
			<span class="lang-separator">/</span>
			<a href="/womb/fr/events" class="lang-option">FR</a>
		</div>
	</div>
</BaseLayout>

<style>
	.landing {
		width: 100%;
		height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
	}

	/* Content styling */
	.content {
		text-align: center;
		z-index: 10;
		text-shadow: 0 0 40px rgba(0, 0, 0, 0.9);
	}

	.womb-link {
		text-decoration: none;
		display: inline-block;
		transition: transform 0.3s ease;
	}

	.womb-link:hover {
		transform: scale(1.02);
	}

	h1 {
		font-size: 6rem;
		font-weight: 200;
		letter-spacing: 0.3em;
		color: #d0d0d0;
		margin-bottom: 1rem;
		text-transform: lowercase;
		opacity: 0;
		animation: fadeInContent 3s ease-in forwards;
		transition: color 0.3s ease;
	}

	.womb-link:hover h1 {
		color: #ffffff;
	}

	.tagline {
		font-size: 1rem;
		letter-spacing: 0.2em;
		color: #808080;
		font-weight: 300;
		text-transform: lowercase;
		opacity: 0;
		animation: fadeInContent 3s ease-in 1s forwards;
	}

	@keyframes fadeInContent {
		to {
			opacity: 1;
		}
	}

	/* Language selector */
	.lang-enter {
		position: fixed;
		bottom: 2rem;
		right: 2rem;
		z-index: 100;
		font-size: 1.2rem;
		letter-spacing: 0.2em;
	}

	.lang-option {
		color: rgba(255, 255, 255, 0.4);
		text-decoration: none;
		transition: color 0.3s;
	}

	.lang-option:hover {
		color: rgba(255, 255, 255, 0.9);
	}

	.lang-separator {
		color: rgba(255, 255, 255, 0.2);
		margin: 0 0.5rem;
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		h1 {
			font-size: 3rem;
			letter-spacing: 0.2em;
		}

		.tagline {
			font-size: 0.8rem;
		}

		.lang-enter {
			bottom: 1rem;
			right: 1rem;
			font-size: 1rem;
		}
	}
</style>